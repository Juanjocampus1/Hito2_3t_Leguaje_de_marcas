
<div class="title">
    Hito de Lenguaje de Marcas
</div>

<style>
    .title {
        text-align: center;
        font-weight: 800;
        text-transform: uppercase;
        font-size: 130px;
        background: url("https://codetheworld.io/wp-content/uploads/2024/05/bg-2.jpeg")repeat;
        background-position: 40% 50%;
        background-clip: text;
        color: transparent;
        letter-spacing: -8px;
        padding: 10px;
        cursor: pointer;
        transition: none;
    }
</style>

<script>
    const titleEle = document.querySelector('.title');

    document.addEventListener('mousemove',(event)=>{
        
        const {pageX, pageY} = event;
        const x  =((10 * pageX) / 570) + 40;
        const y = ((10 * pageY) / 570) + 40;

        titleEle.style.backgroundPosition = `${x}% ${y}%`;
    })
</script>